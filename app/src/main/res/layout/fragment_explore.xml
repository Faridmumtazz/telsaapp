<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:background="@drawable/palm"
    tools:context=".ExploreFragment">

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_italic"
        android:text="Traceability Sawit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:text="Hai, guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular"
        android:text="Telusuri produk CPO mu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="50dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#0000"
        app:cardElevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/kebun"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/logistik"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/perebusan"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/pemisahan"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/pengempaan"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/pemurnian"
                    android:layout_width="120dp"
                    android:layout_height="120dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>